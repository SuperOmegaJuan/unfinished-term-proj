<h1>Products</h1>

<div class="product-grid">
  <% products.forEach(product => { %>

    <div class="product-card">
      <img src="<%= product.image %>" width="150">
      <h3><%= product.name %></h3>
      <p>$<%= product.price %></p>

      <a href="/products/<%= product.id %>" class="btn">
        View Product
      </a>
    </div>

  <% }) %>
</div>

